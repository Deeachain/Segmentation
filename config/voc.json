{
    "name": "PSPNet",
    "n_gpu": 1,
    "use_synch_bn": true,

    "arch": {
        "type": "PSPNet",
        "args": {
            "backbone": "resnet50",
            "freeze_bn": false,
            "freeze_backbone": false
        }
    },

    "train_loader": {
        "type": "VOC",
        "args":{
            "data_dir": "/media/ding/Data/datasets/VOC2012",
            "batch_size": 8,
            "base_size": 512,
            "crop_size": 512,
            "augment": true,
            "shuffle": true,
            "scale": true,
            "flip": true,
            "rotate": true,
            "blur": false,
            "split": "train",
            "num_workers": 4
        }
    },

    "val_loader": {
        "type": "VOC",
        "args":{
            "data_dir": "/media/ding/Data/datasets/VOC2012",
            "batch_size": 8,
            "crop_size": 512,
            "val": true,
            "split": "val",
            "num_workers": 4
        }
    },

    "optimizer": {
        "type": "SGD",
        "differential_lr": true,
        "args":{
            "lr": 0.0001,
            "weight_decay": 1e-4,
            "momentum": 0.9
        }
    },

    "loss": "CrossEntropyLoss2d",
    "ignore_index": 255,
    "lr_scheduler": {
        "type": "Poly",
        "args": {}
    },

    "trainer": {
        "epochs": 200,
        "save_dir": "ckpt",
        "save_period": 10,

        "monitor": "max Mean_IoU",
        "early_stop": 10,

        "tensorboard": true,
        "log_dir": "ckpt",
        "log_per_iter": 20,

        "val": true,
        "val_per_epochs": 5
    }
}
